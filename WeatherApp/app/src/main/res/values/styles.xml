<resources>
    <!--全屏主题 启动页-->
    <style name="Theme.AppCompat.FullScreen.Splash" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_style</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--全屏主题 登录页-->
    <style name="Theme.AppCompat.FullScreen.Login" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/login_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--全屏主题 注册页-->
    <style name="Theme.AppCompat.FullScreen.Register" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/register_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--蓝色主题-->
    <style name="AppTheme_Day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/day_skin</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 主题 状态栏 下划线 -->
        <item name="colorPrimary">#00A9E7</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">#5DABF1</item>
        <!--正常  控件被激活时 涟漪效果颜色 #B2F0EA-->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#DDA0B0</item>
        <item name="colorControlHighlight">#7EFEE7</item>
        <!-- 隐藏ActionBar(标题栏)  -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--暗色 -->
    <style name="AppTheme_Night" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 主题 状态栏 下划线 -->
        <item name="colorPrimary">#222222</item>
        <item name="colorPrimaryDark">#535353</item>
        <item name="colorAccent">#2C2C2C</item>
        <!--正常  控件被激活时 涟漪效果颜色 #B2F0EA-->
        <item name="colorControlNormal">#414141</item>
        <item name="colorControlActivated">#444444</item>
        <item name="colorControlHighlight">#395B85</item>
        <!-- 隐藏ActionBar(标题栏)  -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--全屏主题 城市页-->
    <style name="Theme.AppCompat.FullScreen.City" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.AppCompat.FullScreen.About" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--全屏主题 亮色-->

    <!--定义溢出菜单样式-->
    <style name="ToolbarPopupTheme" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--更改背景颜色-->
        <item name="android:popupBackground">#32363C</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!--隐藏ActionBar-->
    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <!--文字基本样式-->
    <style name="BasicText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <!--更改EditText下划线-->
    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <!--更改EditText下划线-->
    <style name="EditText_register" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#7D7B7E</item>
        <item name="colorControlActivated">#7D7B7E</item>
    </style>
    <!--自定义对话框样式-->
    <!--未来天气-->
    <!--图片样式-->
    <style name="ImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!--文字样式-->
    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/white_trans</item>
    </style>
    <!--表格布局样式-->
    <style name="Table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>
    <!--生活指数-->

    <style name="WeatherInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--水平线-->
    <style name="Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white_trans55</item>
    </style>


</resources>
