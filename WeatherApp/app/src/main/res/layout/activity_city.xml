<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2F6F7"
    android:orientation="vertical"
    tools:context="com.ice.weather.ui.CityActivity">

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6BC8EC"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="7dp">
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_return"
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_return"
                        />
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/et_query"
            android:layout_width="330dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/searchcity_edit_style"
            android:hint="@string/Search_locate_content"
            android:textColor="@color/white"
            android:textColorHint="#A8E0F5"
            android:textSize="13sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_light_main_search"
                android:contentDescription="@null" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
