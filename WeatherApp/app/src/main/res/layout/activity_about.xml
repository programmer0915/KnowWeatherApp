<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="com.ice.weather.ui.AboutActivity"
   >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fitsSystemWindows="true"
        android:background="#D0D1D4">
    </android.support.v7.widget.Toolbar>

<LinearLayout

    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知天气"
                android:textSize="16dp"
                android:textColor="#777777"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0.0"
                android:textSize="12dp"
                android:textColor="#777777"/>

        </LinearLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/iv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_project"
        android:layout_marginEnd="5dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_project"
            android:gravity="center_vertical"
            android:text="项目用到的开源组件"
            android:textColor="#101010"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_project"
            android:layout_marginTop="2dp"
            android:paddingStart="37dp"
            android:paddingEnd="0dp"
            >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#F1F1F1"/>
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_okhttp3"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_view">
    <TextView
        android:drawableLeft="@mipmap/ic_symbol"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp3:https://square.github.io/okhttp"
        android:textColor="#C35580"
        android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_gson"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_okhttp3">
        <TextView
            android:drawableLeft="@mipmap/ic_symbol"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gson:https://github.com/google/gson"
            android:textColor="#C35580"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_permissions"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_gson">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/iv_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_symbol"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PermissionsDispatcher:\nhttps://github.com/permissions-dispatcher/PermissionsDispatcher"
            android:textColor="#C35580"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mpandroidchart"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_permissions">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/iv_mpandroidchart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_symbol"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_mpandroidchart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MPAndroidChart:\nhttps://github.com/PhilJay/MPAndroidChart"
            android:textColor="#C35580"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_mpandroidchart"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/iv_circledialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_symbol"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_circledialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CircleDialog:https://github.com/mylhyl/Android-CircleDialog"
            android:textColor="#C35580"
            android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
</LinearLayout>