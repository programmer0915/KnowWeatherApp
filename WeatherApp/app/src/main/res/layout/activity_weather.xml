<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_weather_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_now_weather"
                style="@style/BasicText"
                android:text="@string/default_text_type2"
                android:textSize="@dimen/text_size_50"
                android:textColor="@color/white" />
            <TextView
                style="@style/BasicText"
                android:text="°"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_60"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">
                <!--将图片输出至Textview左边-->
                <TextView
                    android:id="@+id/tv_temp_max"
                    android:text="@string/default_text_type2"
                    style="@style/BasicText"
                    android:drawableStart="@drawable/ic_temp_max"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_9"
                    android:paddingStart="0dp"
                    android:paddingEnd="3dp"
                    android:layout_marginBottom="14dp"
                    />
                <TextView
                    android:id="@+id/tv_temp_min"
                    android:text="@string/default_text_type2"
                    style="@style/BasicText"
                    android:drawableStart="@drawable/ic_temp_min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_9"
                    android:paddingStart="0dp"
                    android:paddingEnd="3dp"
                    />
                <ImageButton
                    android:id="@+id/ib_speak"
                    android:layout_marginTop="4dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_speak"
                    android:background="@color/transparent"/>
            </LinearLayout>
        </LinearLayout>

        <!--天气类型-->
        <RelativeLayout
            android:background="@drawable/weather_type_bg"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_weather_type"
                android:textColor="@color/white_trans"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="@dimen/text_size_12"
                />
                <TextView
                    android:id="@+id/tv_weather_api"
                    android:layout_toRightOf="@+id/tv_weather_type"
                    android:textColor="@color/white_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="@dimen/text_size_12"
                    />
            </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>
